<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.StartActivity"
    android:id="@+id/start_activity"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/start_top_IV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/start_paring_image"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"

        />
    <TextView
        android:id="@+id/start_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_title"
        android:textSize="@dimen/title_20"
        android:textColor="@color/BlackColor"
        android:textAlignment="center"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30"
        android:src="@drawable/dmp_logo"
        />
    <TextView
        android:id="@+id/start_sub_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_sub_title"
        android:textSize="@dimen/title_18"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_50"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:background="@color/LogoRed"
            android:text="@string/login"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/whiteColor" />

        <Button
            android:id="@+id/signup_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/LogoRed"
            android:text="@string/signup"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/whiteColor" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_30">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/powered_by"
            android:textColor="@color/BlackColor"
            android:textSize="@dimen/title_18"
            android:layout_marginRight="@dimen/margin_30"
            android:textAlignment="viewStart"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fiber_logo"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>


</LinearLayout>